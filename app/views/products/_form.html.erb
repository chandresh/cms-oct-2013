<%= form_for @product, :html => {:multipart => true} do |form| %>
    <p>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </p>

    <p>
      <%= form.label :photo %>
      <%= form.file_field :photo %>
    </p>

    <p>
      <%= form.label :price %>
      <%= form.text_field :price %>
    </p>

    <p>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </p>

    <%= form.submit "Save" %>
<% end %>